
function dockerBash() {
    echo "Grepping for $1"
    CONTAINER_ID=$(sudo docker ps | grep "$1" | awk '{ print $1 }' | tail -n 1)
    echo "Found $CONTAINER_ID"
    if [ ! -z "${CONTAINER_ID-unset}" ]; then
        echo "Bashing into $CONTAINER_ID"
        sudo docker exec -it $CONTAINER_ID bash
    fi
}

function slaveLogs() {
    CONTAINER_ID=$(sudo docker ps | grep "slave" | awk '{ print $1 }' | tail -n 1)
    echo "Found $CONTAINER_ID"
    if [ ! -z "${CONTAINER_ID-unset}" ]; then
        echo "Bashing into $CONTAINER_ID"
        sudo docker exec -it $CONTAINER_ID 'docker logs $(docker ps -q)'
    fi
}

function dockerExec() {
    echo "Grepping for $1"
    CONTAINER_ID=$(sudo docker ps | grep "$1" | awk '{ print $1 }' | tail -n 1)
    echo "Found $CONTAINER_ID"
    if [ ! -z "${CONTAINER_ID-unset}" ]; then
        echo "Bashing into $CONTAINER_ID"
        echo sudo docker exec -it $CONTAINER_ID $2 $3 $4 $5 $6 $7 $8 $9
        sudo docker exec -it $CONTAINER_ID $2 $3 $4 $5 $6 $7 $8 $9
    fi
}

alias dbash=dockerBash
alias dexec=dockerExec
